<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.community.repository.mapper.UserMapper">

	<select id="idCheck" parameterType="string" resultType="int">
    select count(id)
        from tb_account
        where id = #{id}
    </select>

    <select id="loginAccount" parameterType="account" resultType="account">
    select *
        from tb_account
        where id = #{id}
        and pass = #{pass}
    </select>
    
    <insert id="registerAccount" parameterType="account">
	    insert into 
	    tb_account(id,pass,name,email) 
	    values
	    (#{id},#{pass},#{name},#{email})
  </insert>



</mapper>